@page
@model ClaimsModel
@{
    ViewData["Title"] = "Claims";
}

<div class="row">
    <div class="col-md-12">
        <h2>Claims</h2>
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td class="fst-italic">@Model.ClaimDescription.Get(claim.Type)</td>
                        <td class="fw-bold">@claim.Value</td>
                    </tr>                    
                }
            </tbody>
        </table>
    </div>
</div>